<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="searchBoxBackground">@color/search_color</item>
        <item name="md_font_title">@font/hkgrotesk</item>
        <item name="md_font_body">@font/hkgrotesk</item>
        <item name="md_font_button">@font/hkgrotesk</item>
        <item name="md_button_casing">literal</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
    </style>

    <style name="TransparentActivity" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseBottomSheetDialog.Dark" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_rounded_bg</item>
        <!-- Fix the broken sheet size when rotated. Google, if you're reading this - fix it. This should not be needed. -->
        <item name="behavior_peekHeight">512dp</item>
    </style>

    <style name="TextAppearance.AppCompat.Small.TapTap" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/hkgrotesk</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium.TapTap" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/hkgrotesk</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium.TapTap.Primary" parent="TextAppearance.AppCompat.Medium.TapTap">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.AppCompat.Large.TapTap" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/hkgrotesk</item>
    </style>

    <style name="AppTheme.ThirdPartyLicences" parent="Theme.MaterialComponents.DayNight">
        <item name="actionBarStyle">@style/ThirdPartyLicencesToolbarTheme</item>
        <item name="android:statusBarColor">?android:windowBackground</item>
        <item name="android:windowLightStatusBar">@bool/lightStatusNav</item>
        <item name="android:textViewStyle">@style/ThirdPartyLicencesTextViewStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThirdPartyLicencesToolbarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">?android:windowBackground</item>
        <item name="titleTextStyle">@style/ThirdPartyLicencesToolbarTitleStyle</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="ThirdPartyLicencesToolbarTitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/hkgrotesk</item>
    </style>

    <style name="ThirdPartyLicencesTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/hkgrotesk</item>
    </style>

    <style name="ReachabilityTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/reachabilityBackground</item>
    </style>

    <style name="ActionButtonOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?android:textColorPrimary</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.TapTap" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Design.Hint.TapTap</item>
        <item name="fontFamily">@font/hkgrotesk</item>
        <item name="android:fontFamily">@font/hkgrotesk</item>
    </style>

    <style name="TextAppearance.Design.Hint.TapTap" parent="TextAppearance.Design.Hint">
        <item name="fontFamily">@font/hkgrotesk</item>
        <item name="android:fontFamily">@font/hkgrotesk</item>
    </style>

</resources>
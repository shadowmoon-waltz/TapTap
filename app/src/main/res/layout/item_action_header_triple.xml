<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_large"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginEnd="@dimen/activity_padding"
    android:layout_marginBottom="@dimen/margin_small"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="@color/icon_circle_12"
    app:cardCornerRadius="@dimen/margin_small"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_action_blocked_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_padding">

        <ImageView
            android:id="@+id/help_action_triple_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?android:textColorPrimary" />

        <TextView
            android:id="@+id/help_action_triple_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_padding"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="@string/help_action_triple_disabled"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium.TapTap.Primary"
            app:layout_constraintBottom_toTopOf="@id/help_action_triple_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/help_action_triple_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/help_action_triple_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_padding"
            android:text="@string/help_action_triple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/help_action_triple_icon"
            app:layout_constraintTop_toBottomOf="@id/help_action_triple_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>